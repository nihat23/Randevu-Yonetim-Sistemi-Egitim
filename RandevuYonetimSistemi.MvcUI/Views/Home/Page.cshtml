@model Entities.Page
@{
    ViewBag.Title = Model.Name;
}

<div class="row">
    <h2>@Model.Name</h2>
    @{
        if (!string.IsNullOrWhiteSpace(Model.Image))
        {
            <div class="col">
                <img src="~/Images/@Model.Image" alt="@Model.Name" title="@Model.Name" />
            </div>
        }
    }
    <div class="col">
        @Html.Raw(Model.PageContent)
    </div>
</div>


