@model IEnumerable<Entities.Randevu>

@{
    ViewBag.Title = "Randevular";
}

<h2>Randevular</h2>

<p>
    @Html.ActionLink("Yeni Ekle", "Create", null, new { @class = "btn btn-outline-primary" })
</p>
<table class="table table-striped table-hover">
    <tr>
        <th>
            Hasta Bilgisi
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RandevuTarihi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sikayet)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.KronikHastalik)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sgk)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.Hasta.Adi @item.Hasta.Soyadi
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RandevuTarihi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sikayet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KronikHastalik)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sgk)
            </td>
            <td>
                @Html.ActionLink("Düzenle", "Edit", new { id = item.Id }, new { @class = "btn btn-sm btn-primary" }) |
                @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "btn btn-sm btn-danger" })
            </td>
        </tr>
    }

</table>
